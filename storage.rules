rules_version = '2';

// Firebase Storage rules for Scanner App
service firebase.storage {
  match /b/{bucket}/o {
    // Student photos - require authentication to read/write
    match /student-photos/{studentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && (studentId.matches('^[A-Za-z]{2}\\d{7}\\.(jpg|jpeg|png|webp)$'))
                   && resource.size < 5 * 1024 * 1024; // Max 5MB
    }
    
    // General uploads folder - authenticated users only
    match /uploads/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}